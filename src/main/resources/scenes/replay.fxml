<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<GridPane styleClass="field" stylesheets="/styles/replay.css" alignment="center" hgap="10.0" vgap="10.0" fx:controller="com.harambe.gui.ReplayController"
          xmlns:fx="http://javafx.com/fxml">
   <padding>
      <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
   </padding>

   <Label text="Past Games" GridPane.columnIndex="0" GridPane.rowIndex="0"
          style="-fx-font: NORMAL 20 Tahoma;"/>

    <TableView fx:id="gameTableView" GridPane.columnIndex="0"
               GridPane.rowIndex="1" onMouseClicked="#displaySets">
        <columns>
            <TableColumn fx:id="GameUUID" text="Game-ID" prefWidth="300" />
            <TableColumn fx:id="OpponentName" text="Opponent" prefWidth="100" />
            <TableColumn fx:id="OurScore" text="We" prefWidth="50" />
            <TableColumn fx:id="OpponentScore" text="Op." prefWidth="50" />
            <TableColumn fx:id="GameDate" text="Date" prefWidth="200" />
        </columns>
    </TableView>

    <TableView fx:id="setTableView" GridPane.columnIndex="1"
               GridPane.rowIndex="1" onMouseClicked="#enableButton">
        <columns>
            <TableColumn fx:id="SetNumber" text="Set" prefWidth="50" />
            <TableColumn fx:id="WeStarted" text="We Started" prefWidth="100" />
            <TableColumn fx:id="WeWon" text="We Won" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="BOTTOM_LEFT" GridPane.columnIndex="0"
          GridPane.rowIndex="2">
        <Button text="back" onAction="#backToMainMenu"/>
    </HBox>

   <HBox spacing="-10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1"
         GridPane.rowIndex="2">
      <Button fx:id="startReplayBtn" text="next" onAction="#startReplay" disable="true"/>
   </HBox>

    <HBox spacing="-10" alignment="TOP_RIGHT" GridPane.columnIndex="1"
          GridPane.rowIndex="0">
        <Button onAction="#openStatistics" styleClass="buttonStatistics" />
    </HBox>


</GridPane>
